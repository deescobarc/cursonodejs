{{>header}}
<div class="container" style="border-left: 1px solid silver; border-right: 1px solid silver">
    <br>
    <p>Actualice sus datos en el siguiente formulario</p>
    <form action='/actualizar' method="post">
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" name="nombre"
            value="{{nombre}}" placeholder="Nombre de usuario" required><br>
             <div class="row">
                <div class="col">
                    <label>Nota 1</label>
                    <input type="number" class="form-control" name="matematicas" id="matematicas" 
                    value="{{matematicas}}" placeholder="Nota 1" required>
                </div>
                <div class="col">
                    <label>Nota 2</label>
                    <input type="number" class="form-control" name="ingles" id="ingles" 
                    value="{{ingles}}" placeholder="Nota 2" required>
                </div>
                <div class="col">
                    <label>Nota 3</label>
                    <input type="number" class="form-control" name="programacion" id="programacion" 
                    value="{{programacion}}"  placeholder="Nota 3" required>
                </div>
            </div>
            <br>
            <div class="text-center">
                <button class="btn btn-dark" >Registrar</button>
            </div>
        </div>
    </form>
</div>
{{>footer}}